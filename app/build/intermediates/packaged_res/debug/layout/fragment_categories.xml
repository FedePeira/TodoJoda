<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/categoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/categories_title"
        android:textColor="@color/primary"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/sub_title"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesTitle" />

    <GridLayout
        android:id="@+id/containerCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="10px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubTitle">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryAmigos"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background"
            android:drawableTop="@drawable/ic_background_friends"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/amigos"
            android:textAllCaps="false"
            android:textColor="@color/btn_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryPrevia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background_white"
            android:drawableTop="@drawable/ic_background_previa"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/previa"
            android:textAllCaps="false"
            android:textColor="@color/secondary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryBoliche"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background_white"
            android:drawableTop="@drawable/ic_background_boliche"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/boliche"
            android:textAllCaps="false"
            android:textColor="@color/secondary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryEncuentros"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background"
            android:drawableTop="@drawable/ic_background_encuentro"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/encuentros"
            android:textAllCaps="false"
            android:textColor="@color/btn_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryRestaurante"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background"
            android:drawableTop="@drawable/ic_background_restaurante"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/restaurante"
            android:textAllCaps="false"
            android:textColor="@color/btn_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryPlaya"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15px"
            android:background="@drawable/category_background_white"
            android:drawableTop="@drawable/ic_background_playa"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom|center_horizontal"
            android:text="@string/playa"
            android:textAllCaps="false"
            android:textColor="@color/secondary" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>